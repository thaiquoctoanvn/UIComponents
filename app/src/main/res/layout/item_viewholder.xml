<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/lv16dp">
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/lv64dp"
        android:layout_height="@dimen/lv64dp"
        app:cardCornerRadius="@dimen/lv16dp"
        app:cardElevation="1dp"
        android:background="@color/colorWhite"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/cvViewHolder">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ivViewHolder"
            android:src="@mipmap/ic_test"
            android:scaleType="fitXY"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/cvViewHolder"
        app:layout_constraintBottom_toBottomOf="@id/cvViewHolder"
        app:layout_constraintLeft_toRightOf="@id/cvViewHolder"
        app:layout_constraintRight_toLeftOf="@id/cbViewHolder"
        android:text="Item"
        android:layout_marginLeft="@dimen/lv16dp"
        android:layout_marginRight="@dimen/lv16dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:id="@+id/tvViewHolder"/>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/cvViewHolder"
        app:layout_constraintBottom_toBottomOf="@id/cvViewHolder"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/cbViewHolder"/>

</androidx.constraintlayout.widget.ConstraintLayout>